<Window x:Class="WpfExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExplorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Name="TB_Ping" Margin="10,10,129,376">Connecting to Database...</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="0" Name="TB_PingTime" Margin="0,10,10,376"></TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="0" Name="TB_SearchText" Margin="0,8,0,396" Grid.ColumnSpan="2">Suchen Sie nach einem Dateinamen oder nach dem Inhalt einer Datei</TextBlock>
        <TextBox HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" Name="tb_Search" Height="20px" TextChanged="tb_Search_TextChanged" Margin="0,32,0,367"></TextBox>
        <Button Name="DetectUSB" Height="30" Click="Detect_Click" Margin="0,361,6,28" Grid.Column="1" Grid.Row="0">Neue Datenträger erkennen</Button>
        <Button HorizontalAlignment="Stretch" Name="IndexNewFiles" Height="30" Click="Index_Click" Margin="0,60,0,329" Grid.Column="1" Grid.Row="0">Neue Dateien indizieren</Button>
        <Label HorizontalAlignment="Stretch" Content="Dateien ausschließen" Margin="0,95,0,291" Grid.Column="1" Grid.Row="0"></Label>
        <TextBox Name="tb_AddExceptions"  Margin="0,123,0,273" Grid.Column="1">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding EnterKeyCommand}">
                    
                </KeyBinding>
            </TextBox.InputBindings>
        </TextBox>
        <ListBox Margin="0,155,0,67" Height="200" Name="ListBox" Grid.Column="1">

        </ListBox>
        <Grid Name="GD_Dateiausgabe" Margin="10,60,10,68" Grid.Column="0">

        </Grid>
        <TextBlock Name="IndexProgress" Margin="10,396,10,10" Grid.ColumnSpan="2"></TextBlock>

    </Grid>
</Window>
